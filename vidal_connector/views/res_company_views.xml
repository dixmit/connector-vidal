<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_company_form_vidal" model="ir.ui.view">
        <field name="name">res.company.form.vidal</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Vidal Infos">
                    <group colspan="4">
                        <field name="vidal_client_id" />
                        <field name="vidal_client_secret" />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
